// Define spritesets (normal & snow)
spriteset(ss_ranhaceus_torre_hercon, 	"src/gfx/RANHACEUS/torre_hercon.gimp.png") 	{ tmpl_building() }
spriteset(ss_ranhaceus_torre_hercon_snow, 	"src/gfx/RANHACEUS/torre_hercon_snow.gimp.png") 	{ tmpl_building() }
// Define spritelayouts (normal & snow)
spritelayout sl_ranhaceus_torre_hercon 	{	ground	 	{ sprite: ss_ranhaceus_torre_hercon(4) ;}	building 	{ sprite: ss_ranhaceus_torre_hercon; }}
spritelayout sl_ranhaceus_torre_hercon_snow 	{	ground	 	{ sprite: ss_ranhaceus_torre_hercon_snow(4) ;}	building 	{ sprite: ss_ranhaceus_torre_hercon_snow; }}

// Define Switches
switch(FEAT_HOUSES, SELF, sw_ranhaceus_torre_hercon_snow_aware, terrain_type) {   TILETYPE_SNOW: sl_ranhaceus_torre_hercon_snow;   sl_ranhaceus_torre_hercon;}

