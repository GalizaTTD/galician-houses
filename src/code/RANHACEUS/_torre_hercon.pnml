// Define Item

/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, ranhaceus_torre_hercon, BUILDING_ID_RANHACEUS_TORRE_HERCON, HOUSE_SIZE_1X1){
	property {
		substitute: 28;
		name: string(STR_RANHACEUS_TORRE_HERCON);
	//	building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 255;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 8],[MAIL, 8],[GOOD, 8]];
		local_authority_impact: 200;
		removal_cost_multiplier: 150;
		probability: 4;
		years_available: [1975,0xFFFF];
		minimum_lifetime: 65;
		availability_mask: [ALL_TOWNZONES, ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_RANHACEUS;
	}
	graphics {
		default:sw_ranhaceus_torre_hercon_snow_aware;
		construction_check: sw_population_30000() && sw_unique_worldwide();
 		cargo_production: func_produce(20,8,4);
	}
}
