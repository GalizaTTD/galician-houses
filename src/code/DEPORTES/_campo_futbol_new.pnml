// Define construction checks

// Define Item

/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, deportes_campo_futbol_new, BUILDING_ID_DEPORTES_CAMPO_FUTBOL_NEW, HOUSE_SIZE_2X2){
	property {
		substitute: 20;
		name: TTD_STR_TOWN_BUILDING_NAME_STADIUM_1;
		building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 65;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 8],[FOOD, 8],[BEER, 8]];
		local_authority_impact: 300;
		removal_cost_multiplier: 250;
		probability: 4;
		years_available: [1940,0xFFFF];
		minimum_lifetime: 10;
		availability_mask: [ALL_TOWNZONES & ~bitmask(TOWNZONE_CENTRE), ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_DEPORTES;
	}
	graphics {
		graphics_north: sw_deporte_campo_futbol_new_random_sprite_N;
		graphics_east: sw_deporte_campo_futbol_new_random_sprite_E;
		graphics_west: sw_deporte_campo_futbol_new_random_sprite_W;
		graphics_south: sw_deporte_campo_futbol_new_random_sprite_S;
		construction_check: sw_population_500() && sw_unique_house();
 		cargo_production: func_produce(9,0,5);
	}
}
