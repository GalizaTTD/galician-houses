/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, comercios_hipermercado, BUILDING_ID_COMERCIOS_HIPERMERCADO, HOUSE_SIZE_2X2){
	property {
		substitute: 40;
		name: string(STR_COMERCIOS_HIPERMERCADO);
		building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 150;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 8],[FOOD, 8],[BEER, 8]];
		local_authority_impact: 300;
		removal_cost_multiplier: 250;
		probability: 4;
		years_available: [1800,0xFFFF];
		minimum_lifetime: 20;
		availability_mask: [ALL_TOWNZONES & ~bitmask(TOWNZONE_CENTRE), ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_COMERCIOS;
	}
	graphics {
		graphics_north: sw_comercios_hipermercado_random_sprite_N;
		graphics_south: sw_comercios_hipermercado_random_sprite_S;
		graphics_east: sw_comercios_hipermercado_random_sprite_E;
		graphics_west: sw_comercios_hipermercado_random_sprite_W;
		construction_check: sw_population_5000();
 		cargo_production: func_produce(19,0,9);
	}
}
