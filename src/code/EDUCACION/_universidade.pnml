/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, educacion_universidade, BUILDING_ID_EDUCACION_UNIVERSIDADE, HOUSE_SIZE_2X2){
	property {
		substitute: 20;
		name: string(STR_EDUCACION_UNIVERSIDADE);
		building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 30;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 8]];
		local_authority_impact: 300;
		removal_cost_multiplier: 250;
		probability: 4;
		years_available: [0,0xFFFF];
		minimum_lifetime: 10;
		availability_mask: [ALL_TOWNZONES, ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_EDUCACION;
	}
	graphics {
		graphics_north: sw_educacion_universidade_random_sprite_N;
		graphics_south: sw_educacion_universidade_random_sprite_S;
		graphics_east: sw_educacion_universidade_random_sprite_E;
		graphics_west: sw_educacion_universidade_random_sprite_W;
	}
}
