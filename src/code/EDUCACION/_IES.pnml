// Define construction checks

// Define Item

/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, educacion_IES, BUILDING_ID_EDUCACION_IES, HOUSE_SIZE_1X2){
	property {
		substitute: 7;
		name: string(STR_EDUCACION_IES);
	//	building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 60;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 8]];
		local_authority_impact: 100;
		removal_cost_multiplier: 100;
		probability: 2;
		years_available: [1970,0xFFFF];
		minimum_lifetime: 40;
		availability_mask: [ALL_TOWNZONES, ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_EDUCACION;
	}
	graphics {
		graphics_north: sw_educacion_IES_01_N_snow_aware;
		graphics_east: sw_educacion_IES_01_E_snow_aware;
		construction_check: sw_population_5000() && sw_same_type_distance() > 10 && ((sw_get_population() / 2000) > sw_get_same_class_count_town());
 		cargo_production: func_produce(10,4,2);
	}
}
