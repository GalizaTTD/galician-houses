// Define spritesets (normal & snow)
spriteset(ss_educacion_IES_01_N, 	"src/gfx/EDUCACION/IES_01_N.gimp.png") 	{ tmpl_building() }
spriteset(ss_educacion_IES_01_E, 	"src/gfx/EDUCACION/IES_01_E.gimp.png") 	{ tmpl_building() }
spriteset(ss_educacion_IES_01_N_snow, 	"src/gfx/EDUCACION/IES_01_N_snow.gimp.png") 	{ tmpl_building() }
spriteset(ss_educacion_IES_01_E_snow, 	"src/gfx/EDUCACION/IES_01_E_snow.gimp.png") 	{ tmpl_building() }

// Define spritelayouts (normal & snow)
spritelayout sl_educacion_IES_01_N 	{	ground	 	{ sprite: ss_educacion_IES_01_N(4) ;}	building 	{ sprite: ss_educacion_IES_01_N; }}
spritelayout sl_educacion_IES_01_E 	{	ground	 	{ sprite: ss_educacion_IES_01_E(4) ;}	building 	{ sprite: ss_educacion_IES_01_E; }}
spritelayout sl_educacion_IES_01_N_snow 	{	ground	 	{ sprite: ss_educacion_IES_01_N_snow(4) ;}	building 	{ sprite: ss_educacion_IES_01_N_snow; }}
spritelayout sl_educacion_IES_01_E_snow 	{	ground	 	{ sprite: ss_educacion_IES_01_E_snow(4) ;}	building 	{ sprite: ss_educacion_IES_01_E_snow; }}

// Define Switches
switch(FEAT_HOUSES, SELF, sw_educacion_IES_01_N_snow_aware, terrain_type) {   TILETYPE_SNOW: sl_educacion_IES_01_N_snow;   sl_educacion_IES_01_N;}
switch(FEAT_HOUSES, SELF, sw_educacion_IES_01_E_snow_aware, terrain_type) {   TILETYPE_SNOW: sl_educacion_IES_01_E_snow;   sl_educacion_IES_01_E;}


