// Define Item

/* Old stadium requires a population of at least 500. Substitute shopping centre to avoid inheriting stadium flag. */
item(FEAT_HOUSES, SSPP_parking, BUILDING_ID_SSPP_PARKING, HOUSE_SIZE_1X1){
	property {
		substitute: 14;
		name: string(STR_SSPP_PARKING);
	//	building_flags: bitmask(HOUSE_FLAG_PROTECTED);
		population: 0;
		mail_multiplier: 0;
		accepted_cargos: [[PASS, 1]];
		local_authority_impact: 10;
		removal_cost_multiplier: 10;
		probability: 1;
		years_available: [1940,0xFFFF];
		minimum_lifetime: 5;
		availability_mask: [ALL_TOWNZONES, ALL_CLIMATES | bitmask(ABOVE_SNOWLINE)];
      building_class: BUILDING_CLASS_SSPP;
	}
	graphics {
		default:sw_SSPP_parking_random_sprite;
		construction_check: sw_same_type_distance() > 5;
 		cargo_production: func_produce(0,0,0);
	}
}
