// Define spritesets (normal & snow)
spriteset(ss_SSPP_parking_01, 	"src/gfx/SSPP/parking_01.gimp.png") 	{ tmpl_building() }
spriteset(ss_SSPP_parking_01_snow, 	"src/gfx/SSPP/parking_01_snow.gimp.png") 	{ tmpl_building() }
spriteset(ss_SSPP_parking_02, 	"src/gfx/SSPP/parking_02.gimp.png") 	{ tmpl_building() }
spriteset(ss_SSPP_parking_02_snow, 	"src/gfx/SSPP/parking_02_snow.gimp.png") 	{ tmpl_building() }
// Define spritelayouts (normal & snow)
spritelayout sl_SSPP_parking_01 	{	ground	 	{ sprite: ss_SSPP_parking_01(4) ;}	building 	{ sprite: ss_SSPP_parking_01; }}
spritelayout sl_SSPP_parking_01_snow 	{	ground	 	{ sprite: ss_SSPP_parking_01_snow(4) ;}	building 	{ sprite: ss_SSPP_parking_01_snow; }}
spritelayout sl_SSPP_parking_02 	{	ground	 	{ sprite: ss_SSPP_parking_02(4) ;}	building 	{ sprite: ss_SSPP_parking_02; }}
spritelayout sl_SSPP_parking_02_snow 	{	ground	 	{ sprite: ss_SSPP_parking_02_snow(4) ;}	building 	{ sprite: ss_SSPP_parking_02_snow; }}

// Define Switches
switch(FEAT_HOUSES, SELF, sw_SSPP_parking_01_snow_aware, terrain_type) {   TILETYPE_SNOW: sl_SSPP_parking_01_snow;   sl_SSPP_parking_01;}
switch(FEAT_HOUSES, SELF, sw_SSPP_parking_02_snow_aware, terrain_type) {   TILETYPE_SNOW: sl_SSPP_parking_02_snow;   sl_SSPP_parking_02;}

random_switch (FEAT_HOUSES, SELF, sw_SSPP_parking_random_sprite) {
   1: sw_SSPP_parking_01_snow_aware;
   1: sw_SSPP_parking_02_snow_aware;
}
