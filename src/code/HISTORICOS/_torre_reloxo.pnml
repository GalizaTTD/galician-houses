spritelayout sl_historicos_torre_reloxo_E_STONE 	{	ground	 	{ sprite: ss_historicos_torre_reloxo_E_STONE(4) ;}	building 	{ sprite: ss_historicos_torre_reloxo_E_STONE; }}
spritelayout sl_historicos_torre_reloxo_S_STONE 	{	ground	 	{ sprite: ss_historicos_torre_reloxo_S_STONE(4) ;}	building 	{ sprite: ss_historicos_torre_reloxo_S_STONE; }}
